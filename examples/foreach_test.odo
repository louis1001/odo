
int sz = 11
string mat[][] = [["*"]*sz]*sz

println("This is so cool... A little too C++sy or Javascripty.")
println("Love it tho\n<3\n\n")

forange i : 1, sz {
    int counter = 0
    clear()
    foreach row : mat {
        foreach x : row {
            if counter%i == 0 {
                print(x, " ")
            } else {
                print("  ")
            }
            counter++
        }
        println()
    }

    sleep(300)
}
