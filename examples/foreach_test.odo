
var sz = 11
var mat = [["*"]*sz]*sz

writeln("This is so cool... A little too C++sy or Javascripty.")
writeln("Love it tho\n<3\n\n")

forange i : 1, sz {
    var counter = 0
    clear()
    foreach row : mat {
        foreach x : row {
            if counter%i == 0 {
                write(x, " ")
            } else {
                write("  ")
            }
            counter++
        }
        writeln()
    }

    sleep(300)
}
